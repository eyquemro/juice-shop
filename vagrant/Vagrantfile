Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2110"
  config.vm.hostname = "juice.sh"
  config.vm.define "juice-shop"
  config.vm.network "private_network", ip: "192.168.56.110"

  # üîÅ Monte le dossier courant (o√π se trouve le Vagrantfile) dans la VM
  config.vm.synced_folder ".", "/vagrant"

  # Copie la conf Apache (pas forc√©ment utile ici, conserv√© pour compatibilit√©)
  config.vm.provision "file", source: "./default.conf", destination: "/tmp/juice-shop/default.conf"

  # Lancement du script d‚Äôinstallation Docker + Juice Shop
  config.vm.provision :shell, path: "bootstrap.sh"

  # Provision Ansible local √† l‚Äôint√©rieur de la VM
  config.vm.provision "ansible_local" do |ansible|
    ansible.playbook = "/vagrant/playbook.yml"
    ansible.compatibility_mode = "2.0"
  end
end
